{
	"name": "my-css-flex",
	"description": "The CSS flex classnames every project needs.",
	"license": "MIT",
	"version": "0.0.2",
	"main": "./flex.css",
	"files": [
		"flex.min.css",
		"flex.css"
	],
	"scripts": {
		"dev": "postcss ./flex.css --output ./flex.min.css --watch",
