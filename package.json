		"banner": "node build-utils/add-banner.js ./flex.min.css",
		"version": "npm run build && git add ./flex.min.css",
		"postversion": "git push && git push --tags"
	},
	"devDependencies": {
		"cssnano": "^5.1.14",
		"postcss-cli": "^10.0.0"
	},
	"homepage": "https://github.com/taitulism/css-flex#readme",
